#include<Servo.h>
Servo servo1;
Servo servo2;
Servo servo3;
Servo servo4;
Servo servo5;
Servo servo6;

int pos = 0;
void setup()
{
 servo1.attach(3);
 servo2.attach(5);
 servo3.attach(6);
 servo4.attach(9);
 servo5.attach(10);
 servo6.attach(13);
}

void loop()
{
  for (pos = 0; pos <= 180; pos++)
  {
    servo1.write(pos); delay(15);
    servo2.write(pos); delay(15);
    servo3.write(pos); delay(15);
    servo4.write(pos); delay(15);
    servo5.write(pos); delay(15);
    servo6.write(pos); delay(15);
  }
  for (pos = 180; pos >= 0; pos--)
  {
   servo1.write(pos); delay(15);
    servo2.write(pos); delay(15);
    servo3.write(pos); delay(15);
    servo4.write(pos); delay(15);
    servo5.write(pos); delay(15);
    servo6.write(pos); delay(15);
  }
}
